{
  "version": 2,
  "builds": [
    {
      "src": "packages/api/dist/main.js",
      "use": "@vercel/node"
    },
    {
      "src": "packages/pwa/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "packages/api/dist/main.js" }
  ]
}
